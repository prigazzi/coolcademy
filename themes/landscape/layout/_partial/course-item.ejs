<div class="col-xs-12 col-sm-4 col-md-3">
	<div class="course-item">
		<div class="row">
			<div class="col-xs-4 col-sm-12">
			<a href="/<%=config.category_dir%>/<%=slug%>/" class="course-item--link" title="Meer informatie over <%=title%>">
				<img src="/images/courses/<%=image%>" alt="<%=title%>" class="img-circle img-responsive">
			</a>
		</div>
		<div class="col-xs-8 col-sm-12">
			<h3 class="course-item--title">
				<a href="/<%=config.category_dir%>/<%=slug%>/"><%=title%></a>
			</h3>
			<div class="course-item--description">
				<p>
				<% var maxlength = theme.description_length;
					var max = description.length > maxlength ? maxlength : description.length %>
				<%- description.substr(0, max) %>
				<%- description.length > maxlength ? "..." : "" %>
				</p>
				<div class="course-item--details">
					<span class="badge">EN</span>
				</div>
			</div>
		</div>
	</div>
</div>