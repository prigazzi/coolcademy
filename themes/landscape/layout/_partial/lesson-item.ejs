<tr>
  <td class="col-xs-3 col-sm-2 course--status">
    <img src="/images/tags/LessonMarker_InProcess.png" alt="" class="course--status-icon img-circle img-responsive">
  </td>
  <td class="col-xs-8 col-sm-9">
    <article id="<%= post.layout %>-<%= post.slug %>" class="article-type-<%= post.layout %>" itemscope itemprop="blogPost">
      <div class="">
        <%- partial('post/gallery') %>
        <% if (post.title){ %>
          <header class="">
            <h4>
              <% if (typeof lesson != "undefined") { %>
                Lesson <%=lesson%>: 
              <% } %>
              <%=post.title%>
            </h4>
          </header>
        <% } %>
        <% if (post.subtitle) { %>
          <p><%=post.subtitle%></p>
        <% } %>
      </div>
      <% if (!index){ %>
        <%- partial('post/nav') %>
      <% } %>
    </article>
  </td>
  <td class="col-xs-1 course--link">
    <a class="lesson-item--link" href="<%- config.root %><%- post.path %>"></a>
  </td>
</tr>