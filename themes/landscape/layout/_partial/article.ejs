<li class="list-group-item">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-4 col-sm-2 course--status">
        <img src="/images/tags/LessonMarker_Empty.png" alt="" class="course--status-icon img-circle img-responsive">
      </div>
      <div class="col-xs-8 col-sm-10">
        <article id="<%= post.layout %>-<%= post.slug %>" class="article-type-<%= post.layout %>" itemscope itemprop="blogPost">
          <div class="">
            <%- partial('post/gallery') %>
            <% if (post.title){ %>
              <header class="">
                <h4>
                  <% if (typeof lesson != "undefined") { %>
                    Lesson <%=lesson%>: 
                  <% } %>
                  <%=post.title%>
                </h4>
              </header>
            <% } %>
            <% if (!hideContent) { %>
            <div class="" itemprop="articleBody">
              <% if (post.excerpt && index){ %>
                <%- post.excerpt %>
                <% if (theme.excerpt_link){ %>
                  <p class="article-more-link">
                    <a href="<%- config.root %><%- post.path %>#more"><%= theme.excerpt_link %></a>
                  </p>
                <% } %>
              <% } else { %>
                <%- post.content %>
              <% } %>
            </div>
            <% } %>
            <footer class="article-footer">
              <a data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="article-share-link">Share</a>
              <% if (post.comments && config.disqus_shortname){ %>
                <a href="<%- post.permalink %>#disqus_thread" class="article-comment-link">Comments</a>
              <% } %>
              <%- partial('post/tag') %>
            </footer>
          </div>
          <% if (!index){ %>
            <%- partial('post/nav') %>
          <% } %>
        </article>
      </div>
    </div>
  </div>

<% if (!index && post.comments && config.disqus_shortname){ %>
<section id="comments">
  <div id="disqus_thread">
    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
</section>
<% } %>
</li>