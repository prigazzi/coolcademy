.category--header
	padding: 20px 0

.category--panel
	border-radius: 0 !important

.category--panel,
.list-group,
.list-group-item
	border-width: 0 !important

.list-group-item
	height: 120px
	padding: 0 article-padding

.list-group-item:nth-child(2n+1)
	background-color: color-grey

.course--status,
.course--link
	vertical-align: middle !important

.course--status-icon,
.lesson-item--link
	max-width: 50px

.lesson-item--link
	display: block
	height: 30px
	width: 20px
	margin-top: -15px
	background-image: url(/images/navigation/Navigation_ForwardBlue_Normal.png)
	background-repeat: no-repeat
	background-size: contain
	&:hover
		background-image: url(/images/navigation/Navigation_ForwardBlue_MouseOver.png)
	&:visited
		background-image: url(/images/navigation/Navigaton_ForwardBlue_Pressed.png)